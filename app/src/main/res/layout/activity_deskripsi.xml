    <ScrollView
        android:layout_below="@id/tag_halaman"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:id="@id/layoutLinear2"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ProgressBar
                    android:id="@+id/determinateBar"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:progress="75"
                    style="@style/MyProgressBarTwo"
                    android:theme="@style/MyProgressBarTwo"/>

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Judul"
                        android:textSize="12sp"/>

                    <EditText
                        android:textSize="16sp"
                        android:hint="Masukkan nama pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/in_judul"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:textSize="12sp"/>

                    <EditText
                        android:textSize="16sp"
                        android:hint="Jelaskan tentang pekerjaan"
                        android:id="@+id/in_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="1"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:backgroundTint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:textSize="12sp"/>

                    <Spinner
                        android:id="@+id/spinner_pembayaran"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/metode_bayar"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadline"
                            android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left">

                        <EditText
                            android:textSize="16sp"
                            android:hint="Pilih tanggal selesai"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/in_Deadline"
                            android:backgroundTint="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/image_Kalender"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_date"/>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Lokasi Anda"/>

                    <Spinner
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/provinsi"/>

                    <Spinner
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kota"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat Lengkap"/>

                    <EditText
                        android:textSize="14sp"
                        android:hint="Masukkan alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/in_alamat"
                        android:backgroundTint="@color/colorPrimaryDark" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload File"/>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="upload"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="upload"
                            app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"/>

                        <TextView
                            android:layout_marginLeft="8sp"
                            android:id="@+id/txt_Upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload File"
                            android:onClick="upload"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/txt_Hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Max size file 5 mb)"
                            android:textColor="@color/colorGrey2"
                            android:textSize="10sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_file"
                    android:padding="16dp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:id="@+id/txt_namaFile"
                        android:layout_width="256dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="NamaFile.xxx"
                        android:textSize="14sp"
                        android:layout_marginBottom="12sp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        android:id="@+id/txt_url"
                        android:layout_width="256dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <Button
                            android:layout_width="86dp"
                            android:layout_height="32dp"
                            android:id="@+id/uploadToserver"
                            android:onClick="uploadToserver"
                            android:text="upload"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/button_round"/>

                        <Button
                            android:layout_marginLeft="8dp"
                            android:layout_width="86dp"
                            android:layout_height="32dp"
                            android:id="@+id/btn_clear"
                            android:onClick="clear"
                            android:text="clear"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/button_round"
                            android:backgroundTint="@color/colorRed"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>



</RelativeLayout>