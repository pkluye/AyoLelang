<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutLinear1"
        android:orientation="horizontal"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_gravity="left|center"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/txt_subTittle"
            android:paddingRight="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kategori"
            android:textSize="24sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLinear2"
        android:layout_below="@id/layoutLinear1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_subPenjelasan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Penjelasan Kategori"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subFragment"
        android:layout_below="@+id/layoutLinear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_subkategori">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>