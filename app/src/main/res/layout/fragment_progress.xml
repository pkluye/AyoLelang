<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="56dp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btn_Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/txt_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress Saya"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.9" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layoutLinear2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/txt_subtext_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status garapan saat ini"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_progress"-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="60dp"-->
        <!--tools:listitem="@layout/item_progress"/>-->
    
    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:steps="@array/progress_garapan"
            app:sv_animationType="All"
            app:sv_stepPadding="3dp"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepCircleColor="@color/colorGrey2"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Tahap 1-->
        <LinearLayout
            android:id="@+id/default_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada lelang yang berlangsung"
                android:textSize="16sp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_buatLelang"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round"
                android:text="Buat Lelang"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

        <!--Tahap 2-->
        <LinearLayout
            android:id="@+id/layout_tahap2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryLittleDark"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemilihan Mitra"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="3"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/border_all_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ID Garapan"/>


                    <TextView
                        android:layout_marginRight="4dp"
                        android:id="@+id/txt_idGarapan"
                        android:gravity="center_vertical"
                        android:textAlignment="viewEnd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="123456789"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/border_all_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Perkiraan Biaya"/>


                    <TextView
                        android:layout_marginRight="4dp"
                        android:id="@+id/txt_biayaGarapan"
                        android:gravity="center_vertical"
                        android:textAlignment="viewEnd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Rp. 123123123"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/border_all_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mitra Bersedia"/>


                    <TextView
                        android:layout_marginRight="4dp"
                        android:id="@+id/txt_totalMitra"
                        android:gravity="center_vertical"
                        android:textAlignment="viewEnd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="123456789"/>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                tools:listitem="@layout/item_mitra">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>



    </LinearLayout>

    
</LinearLayout>