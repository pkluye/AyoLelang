<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutLinear1"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        />

    <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body"/>

    <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat akun-mu sekarang!"
                android:textSize="@dimen/Font_Body2"/>

    <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="start">


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/in_username"

                        android:layout_gravity="center"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/Font_Body"
                        android:inputType="text"

                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Nama"

                        android:hint="Nama"
                        />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/in_email"

                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/Font_Body"
                        android:inputType="textEmailAddress"

                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Email"

                        android:hint="E-Mail"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/in_ponsel"

                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/Font_Body"
                        android:inputType="textEmailAddress"

                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="No Ponsel"

                        android:hint="Nomor Ponsel"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/in_password"

                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/Font_Body"
                        android:inputType="textPassword"

                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Password"
                        app:met_minCharacters="6"
                        app:met_iconRight="@drawable/ic_visiblepassword"
                        app:met_iconPadding="0dp"

                        android:hint="Password"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/in_repassword"

                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/Font_Body"
                        android:inputType="textPassword"

                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Konfirmasi Password"
                        app:met_minCharacters="6"
                        app:met_iconRight="@drawable/ic_visiblepassword"
                        app:met_iconPadding="0dp"

                        android:hint="Konfirmasi Password"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_round"
                    android:onClick="register"
                    android:text="Register"
                    android:textColor="@color/colorWhite" />

            </ScrollView>


</RelativeLayout>