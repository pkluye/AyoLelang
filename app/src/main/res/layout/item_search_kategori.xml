<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/item_search_kategori"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/button_rectangle_border"
    android:elevation="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/txt_judulgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul garapan"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:id="@+id/txt_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="waktu"
                android:textColor="@color/colorGrey2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                app:srcCompat="@drawable/ic_location"
                android:tint="@color/colorGrey2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <TextView
                android:id="@+id/txt_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/colorGrey2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                app:srcCompat="@drawable/ic_price"
                android:tint="@color/colorGrey2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 2.300.000"
                android:textColor="@color/colorGrey2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                app:srcCompat="@drawable/ic_time"
                android:tint="@color/colorGrey2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <TextView
                android:id="@+id/txt_tenggatWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/11/2011 - 12/12/2012"
                android:textColor="@color/colorGrey2"/>

            <TextView
                android:id="@+id/txt_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="(2 bulan lagi)"
                android:textColor="@color/colorGrey2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:tint="@color/colorGrey2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <TextView
                android:id="@+id/txt_jumlahmitra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Mitra bersedia"
                android:textColor="@color/colorGrey2"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        app:srcCompat="@drawable/ic_navigation_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleX="1.2"
        android:scaleY="1.2"/>

</LinearLayout>