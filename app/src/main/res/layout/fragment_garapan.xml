<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutLinear1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/bg"
        android:weightSum="3"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LELANG"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="24sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btnKategori"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:background="@drawable/button_round"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btnEvent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Event"
                android:background="@drawable/button_round"
                android:textColor="@color/white"
                android:textStyle="bold"/>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layoutLinear1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/mainGrid"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp">

            <!--baris 1-->

            <!--Pendidikan-->

            <android.support.v7.widget.CardView
                android:id="@+id/cv_pendidikan"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    >
                    
                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/garapan_1"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--Percetakan-->

            <android.support.v7.widget.CardView
                android:id="@+id/cv_percetakan"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    >

                    <ImageView
                        android:src="@drawable/printer"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/garapan_2"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--Kuliner-->

            <android.support.v7.widget.CardView
                android:id="@+id/cv_kuliner"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
