<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/img_sender"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/button_round_border"
        app:srcCompat="@drawable/ic_user"
        android:scaleY="1.2"
        android:scaleX="1.2"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_bubble"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Lorem ipsum dolor sit amet, soluta regione"
        android:textColor="@color/colorBlack"
        android:elevation="2dp"
        android:textSize="@dimen/Font_Subtitle2"
        app:layout_constraintLeft_toRightOf="@+id/img_sender"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="@dimen/Font_Caption"
        android:textColor="@color/colorGrey2"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_message_body"
        app:layout_constraintBottom_toBottomOf="@+id/txt_message_body" />

</android.support.constraint.ConstraintLayout>