<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/txt_message_body"
        android:background="@drawable/message_bubble_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Lorem ipsum dolor sit amet, soluta regione"
        android:textColor="@color/colorWhite"
        android:textIsSelectable="true"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/Font_Subtitle2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_message_time"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Font_Caption"
        android:textColor="@color/colorGrey2"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_message_body"
        app:layout_constraintRight_toLeftOf="@+id/txt_message_body" />

</android.support.constraint.ConstraintLayout>