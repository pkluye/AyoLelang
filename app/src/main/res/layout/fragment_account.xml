<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ECEFF0"
    android:orientation="vertical"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:id="@+id/layoutLinear1"
        android:orientation="horizontal"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_hamburger"
            android:layout_gravity="left|center"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu"
            android:scaleX="1.5"
            android:scaleY="1.5"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_marginLeft="24dp"
            android:id="@+id/txt_subTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="Profil Saya"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:src="@drawable/ic_person_black_24dp"
                tools:ignore="VectorDrawableCompat"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/acc_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/acc_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@mail.co"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/acc_noTelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+6212345"
                    android:textSize="10dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_editProfil"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1F9ABF"
                android:text="Edit Profil"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:id="@+id/txt_Point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Points"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Point"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="My Voucher"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Voucher"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="Change Language"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Bahasa"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="Help &amp; Center"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Help"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="Term of Service"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_ToS"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Privacy"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>


            <ImageView
                android:id="@+id/btn_Rate"
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="12sp"
            android:textColor="#F94F2D"/>

    </LinearLayout>

</LinearLayout>