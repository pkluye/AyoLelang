<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/item_search_mitra">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/text_judulPekerjaan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/Font_Body"
            android:text="Judul Pekerjaan"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/text_hargaPekerjaan"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/Font_Caption"
            android:text="Rp 1.000.000" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/rating_pekerjaan"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"/>
    
    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/text_deskripsiPekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Font_Body2"
        android:text="@string/lorem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/colorGrey2"
            android:layout_marginTop="2dp"
            android:id="@+id/text_deskripsiPemberi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Font_Caption"
            android:text="by Beril Sanda"/>

        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorGrey2"
            android:layout_marginTop="2dp"
            android:id="@+id/text_deskripsiWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="- 4h ago"/>

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F0F0F0"/>

</LinearLayout>