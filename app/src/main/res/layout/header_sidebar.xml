<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/text_nama"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/Font_Header2"
                android:text="Nama Pengguna"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/text_email"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/Font_Body"
                android:text="Email Pengguna"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/text_alamat"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/Font_Body2"
                android:text="Kota Pengguna"
                android:textStyle="italic"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemilihan Mitra"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dikerjakan"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pekerjaan Selesai"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_jumlah_pemilihan"
                android:background="@color/colorRed"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:id="@+id/text_jumlah_pengerjaan"
                android:layout_marginTop="4dp"
                android:background="@color/colorYellow"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

            <TextView
                android:id="@+id/text_jumlah_selesai"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Font_Body2"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>