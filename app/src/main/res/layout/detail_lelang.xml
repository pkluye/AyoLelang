<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="55dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_print"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:tint="#4D4D4D"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/txt_judulgarapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul garapan"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        app:srcCompat="@drawable/ic_location"
                        android:tint="@color/colorGrey2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"/>

                    <TextView
                        android:id="@+id/txt_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@color/colorGrey2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="4dp">

                    <TextView
                        android:id="@+id/txt_tenggatWaktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/11/2011 - 12/12/2012"
                        android:textColor="@color/colorRed"/>

                    <TextView
                        android:id="@+id/txt_eta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="(2 bulan lagi)"
                        android:textColor="@color/colorRed"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diposting oleh:"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/txt_namaPelelang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pelelang"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"/>

        <TextView
            android:id="@+id/txt_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi lelang"
            android:textColor="@color/colorBlack"/>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HPS:"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.000.000"
                    android:textColor="@color/colorGrey2"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#F0F0F0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mitra penawar:"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        app:srcCompat="@drawable/ic_person_black_24dp"
                        android:tint="@color/colorGrey2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"/>

                    <TextView
                        android:id="@+id/txt_jumlahmitra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Mitra"
                        android:textColor="@color/colorGrey2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pembayaran:"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textColor="@color/colorGrey2"/>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status garapan:"
                android:textColor="@color/colorBlack"/>

            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/button_rectangle_border">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemilihan Mitra"
                    android:textColor="@color/colorGrey2"/>

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:id="@+id/btn_detailgarapan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/button_rectangle_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat detail spesifikasi"
                android:textColor="@color/colorGrey2"
                android:layout_weight="1"/>

            <ImageView
                app:srcCompat="@drawable/ic_navigation_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_batalkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:background="@drawable/button_rectangle"
                android:backgroundTint="@color/colorRed"
                android:visibility="gone"
                android:text="Batalkan"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_marginRight="8dp"/>


            <Button
                android:id="@+id/btn_ajukanPenawaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:background="@drawable/button_rectangle"
                android:text="Ajukan Penawaran"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>